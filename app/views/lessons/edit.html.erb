<h1>Edit Lesson</h1>

<%= form_for @lesson do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :private %><br />
    <%= f.check_box :private %>
  </div>
  <div class="field"> 
    <%= f.label :content %><br /> 
    <%= f.text_area :content, :class => "mceEditor" %>
  </div>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
