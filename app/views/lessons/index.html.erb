

<table class="profile" summary="Profile information">
  <tr>
    <td class="main">
    	<h1>
        	<%= gravatar_for @user %>
        	<%= @user.name %>
      	</h1>
    	<h2>My Lessons:</h2>
		<% unless @user.lessons.empty? %>
			<table class="lessons" summary="Lessons">
			<!-- automatically renders each lesson in the @lessons using _lesson.html.erb partial -->
    		<%= render @lessons %>
			</table>
			<%= will_paginate @lessons %>
		<% end %>
    </td>
    <td class="sidebar round">
      <strong>Name</strong> <%= @user.name %><br />
      <strong>Lessons</strong> <%= @user.lessons.count %><br />
      <%= link_to "Create New", new_lesson_path %><br />
    </td>
  </tr>
</table>



